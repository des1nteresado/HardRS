<UserControl x:Class="HardRS.HardwareManager.HardwareManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HardRS.HardwareManager"
             xmlns:cpb="clr-namespace:HardRS.CircularProgressBar"
             mc:Ignorable="d" 
             d:DesignHeight="760" d:DesignWidth="525">
    <Grid Background="Azure">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <cpb:CircularProgressBar Grid.Row="0" StrokeThickness="5" Maximum="2600" Radius="100"
                                 Value="{Binding WorkerState}" 
                                 Text="{Binding WorkerText, Mode=OneWay}"
                                 Style="{StaticResource CircularProgressBarStyle}" />
        <cpb:CircularProgressBar Grid.Row="1" StrokeThickness="5" Maximum="2600" Radius="100"
                                 Value="{Binding WorkerState}" 
                                 Text="{Binding WorkerText, Mode=OneWay}"
                                 Style="{StaticResource CircularProgressBarStyle}" />
        <cpb:CircularProgressBar Grid.Row="2" StrokeThickness="5" Maximum="2600" Radius="100"
                                 Value="{Binding WorkerState}" 
                                 Text="{Binding WorkerText, Mode=OneWay}"
                                 Style="{StaticResource CircularProgressBarStyle}" />
    </Grid>
</UserControl>
