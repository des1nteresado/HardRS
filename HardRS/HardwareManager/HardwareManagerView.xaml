<UserControl x:Class="HardRS.HardwareManager.HardwareManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HardRS.HardwareManager"
             xmlns:cpb="clr-namespace:HardRS.CircularProgressBar"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="900">
    <Grid Background="Azure">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <cpb:CircularProgressBar Grid.Column="0" Grid.Row="2" StrokeThickness="5" Radius="70"
                                 Value="{Binding ProgressCPU}" 
                                 Text="{Binding ProgressCPUText, Mode=OneWay}"
                                 Style="{StaticResource CircularProgressBarStyle}" />
        <cpb:CircularProgressBar Grid.Column="1" Grid.Row="2" StrokeThickness="5" Radius="70"
                                 Value="{Binding ProgressMEM}" 
                                 Text="{Binding ProgressMEMText, Mode=OneWay}"
                                 Style="{StaticResource CircularProgressBarStyle}" />
        <cpb:CircularProgressBar Grid.Column="2" Grid.Row="2" StrokeThickness="5" Radius="70"
                                 Value="{Binding ProgressHDD}" 
                                 Text="{Binding ProgressHDDText, Mode=OneWay}"
                                 Style="{StaticResource CircularProgressBarStyle}" />
        <ListBox x:Name="ListOfHardware" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="3" FontSize="18"/>
    </Grid>
</UserControl>
