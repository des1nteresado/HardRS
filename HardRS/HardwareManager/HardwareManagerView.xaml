        <ListBox Grid.Row="0" Grid.ColumnSpan="3" Grid.Column="0" ItemsSource="{Binding Processors}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="18" Text="{Binding Path=Title}" />
                        <TextBlock Text="{Binding Path=CpuName}" />
                        <TextBlock Text="{Binding Path=CpuCores}" />
                        <TextBlock Text="{Binding Path=CpuId}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" ItemsSource="{Binding VideoControllers}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="18" Text="{Binding Path=Title}" />
                        <TextBlock Text="{Binding Path=VcName}" />
                        <TextBlock Text="{Binding Path=VcMemory}" />
                        <TextBlock Text="{Binding Path=VcCpu}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="3" ItemsSource="{Binding Memoryes}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="18" Text="{Binding Path=Title}" />
                        <TextBlock Text="{Binding Path=MBar}" />
                        <TextBlock Text="{Binding Path=MCapacity}" />
                        <TextBlock Text="{Binding Path=MSpeed}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="3" ItemsSource="{Binding DiskDrives}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="18" Text="{Binding Path=Title}" />
                        <TextBlock Text="{Binding Path=DiskModel}" />
                        <TextBlock Text="{Binding Path=DiskSize}" />
                        <TextBlock Text="{Binding Path=DiskSerialNumber}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label x:Name="LabelTempCPU" Grid.Column="4" Background="LightBlue" Content="{Binding TempCPU}" />
        <Label Grid.Row="0" Grid.Column="3" Background="Red" Content="{Binding Processors.Title, Mode=OneWay}" />

    </Grid>
</UserControl>
